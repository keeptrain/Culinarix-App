        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="Profile" parent="@style/Widget.Material3.CardView.Filled">
        <item name="shapeAppearanceOverlay">@style/ProfileBackground</item>
    </style>

    <style name="ProfileBackground" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="RoundedBackground" parent="">
        <item name="cornerFamily">rounded</item>
